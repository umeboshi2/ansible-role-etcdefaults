# Configuration for networking init script being run during
# the boot sequence

# Set to 'no' to skip interfaces configuration on boot
#CONFIGURE_INTERFACES=yes
{% if combined_etcdefaults.networking.configure_interfaces %}
CONFIGURE_INTERFACES={{ combined_etcdefaults.networking.configure_interfaces }}
{% endif %}

# Don't configure these interfaces. Shell wildcards supported/
#EXCLUDE_INTERFACES=
{% if combined_etcdefaults.networking.exclude_interfaces %}
EXCLUDE_INTERFACES={{ combined_etcdefaults.networking.exclude_interfaces }}
{% endif %}

# Set to 'yes' to enable additional verbosity
#VERBOSE=no
{% if combined_etcdefaults.networking.verbose %}
VERBOSE={{ combined_etcdefaults.networking.verbose }}
{% endif %}
