# delete files in /tmp during boot older than x days.
# '0' means always, -1 or 'infinite' disables the feature
#TMPTIME=0
{% if etcdefaults.rcsys.tmptime %}
TMPTIME={{ etcdefaults.rcsys.tmptime }}
{% endif %}

# spawn sulogin during boot, continue normal boot if not used in 30 seconds
#SULOGIN=no
{% if etcdefaults.rcsys.sulogin %}
SULOGIN={{ etcdefaults.rcsys.sulogin }}
{% endif %}

# do not allow users to log in until the boot has completed
#DELAYLOGIN=no
{% if etcdefaults.rcsys.delaylogin %}
DELAYLOGIN={{ etcdefaults.rcsys.delaylogin }}
{% endif %}

# be more verbose during the boot process
#VERBOSE=no
{% if etcdefaults.rcsys.verbose %}
VERBOSE={{ etcdefaults.rcsys.verbose }}
{% endif %}

# automatically repair filesystems with inconsistencies during boot
#FSCKFIX=no
{% if etcdefaults.rcsys.fsckfix %}
FSCKFIX={{ etcdefaults.rcsys.fsckfix }}
{% endif %}
