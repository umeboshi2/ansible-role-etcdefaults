# Configuration for tmpfs filesystems mounted in early boot, before
# filesystems from /etc/fstab are mounted.  For information about
# these variables see the tmpfs(5) manual page.

# /run is always mounted as a tmpfs on systems which support tmpfs
# mounts.

# mount /run/lock as a tmpfs (separately from /run).  Defaults to yes;
# set to no to disable (/run/lock will then be part of the /run tmpfs,
# if available).
#RAMLOCK=yes
{% if etcdefaults_tmpfs_ramlock %}
RAMLOCK={{ etcdefaults_tmpfs_ramlock }}
{% endif %}

# mount /run/shm as a tmpfs (separately from /run).  Defaults to yes;
# set to no to disable (/run/shm will then be part of the /run tmpfs,
# if available).
#RAMSHM=yes
{% if etcdefaults_tmpfs_ramshm %}
RAMSHM={{ etcdefaults_tmpfs_ramshm }}
{% endif %}

# mount /tmp as a tmpfs.  Defaults to no; set to yes to enable (/tmp
# will be part of the root filesystem if disabled).  /tmp may also be
# configured to be a separate mount in /etc/fstab.
#RAMTMP=no
{% if etcdefaults_tmpfs_ramtmp %}
RAMTMP={{ etcdefaults_tmpfs_ramtmp }}
{% endif %}

# Size limits.  Please see tmpfs(5) for details on how to configure
# tmpfs size limits.
#TMPFS_SIZE=20%VM
{% if etcdefaults_tmpfs_tmpfs_size %}
TMPFS_SIZE={{ etcdefaults_tmpfs_tmpfs_size }}
{% endif %}
#RUN_SIZE=10%
{% if etcdefaults_tmpfs_run_size %}
RUN_SIZE={{ etcdefaults_tmpfs_run_size }}
{% endif %}
#LOCK_SIZE=5242880 # 5MiB
{% if etcdefaults_tmpfs_lock_size %}
LOCK_SIZE={{ etcdefaults_tmpfs_lock_size }}
{% endif %}
#SHM_SIZE=
{% if etcdefaults_tmpfs_shm_size %}
SHM_SIZE={{ etcdefaults_tmpfs_shm_size }}
{% endif %}
#TMP_SIZE=
{% if etcdefaults_tmpfs_tmp_size %}
TMP_SIZE={{ etcdefaults_tmpfs_tmp_size }}
{% endif %}

# Mount tmpfs on /tmp if there is less than the limit size (in kiB) on
# the root filesystem (overriding RAMTMP).
#TMP_OVERFLOW_LIMIT=1024
{% if etcdefaults_tmpfs_tmp_overflow_limit %}
TMP_OVERFLOW_LIMIT={{ etcdefaults_tmpfs_tmp_overflow_limit }}
{% endif %}
